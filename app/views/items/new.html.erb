<br>
<h1 style="text-align: center;">Add New Item</h1>

<div class="form-container">
  <% if @item.errors.any? %>
    <div class="error-messages">
      <ul>
        <% @item.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @item do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :quantity %>
      <%= form.text_field :quantity, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :manufacturers, "Manufacturer Name" %>
      <%= form.text_field :manufacturers, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit 'Add Item', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<style>
    /* CSS for form and error messages */
    .form-container {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .error-messages {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .btn {
        padding: 8px 16px;
        background-color: #000;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #333;
    }
</style>

<div style="text-align: center;">
  <%= link_to 'Go back', items_index_path, class: 'btn btn-black' %>
</div>
